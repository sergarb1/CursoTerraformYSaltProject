Vagrant.configure("2") do |config|
  # 游눹 Box p칰blica de Windows 10 (versi칩n de evaluaci칩n)
  config.vm.box = "gusztavvargadr/windows-10"

  # 游니 Usamos WinRM como protocolo de comunicaci칩n (requerido por Windows)
  config.vm.communicator = "winrm"

  # 游대 Mapeamos el puerto RDP 3389 de la VM al host local (mismo puerto)
  config.vm.network "forwarded_port", guest: 3389, host: 3389

  # 游빓 Configuramos recursos de hardware con VirtualBox
  config.vm.provider "virtualbox" do |vb|
    vb.gui = true        # Mostrar la GUI (entorno gr치fico)
    vb.memory = 2048     # Asignar 2 GB de RAM
    vb.cpus = 1          # Asignar 1 CPU
  end
end
